{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program with Nodemon",
			"runtimeExecutable": "nodemon",
			"program": "${workspaceFolder}/app.js",
			"restart": true,
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**"],
			"env": {
				"NODE_ENV": "development"
			}
		}
	]
}
